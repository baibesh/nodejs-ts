    "concurrently": "^6.2.0",
    "eslint": "^7.28.0",
    "nodemon": "^2.0.7",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "express": "^4.17.1",
    "morgan": "^1.10.0",
